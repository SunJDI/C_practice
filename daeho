#include<stdio.h>
int main(void)
{
int a;
int b;
int c;
printf("두 수 입력");
scanf("%d",&a);
scanf("%d",&b);
printf("부호선택\n 1.+\t2.-\t3.*\t4./\n");
scanf("%d",&c);
if(c == 1) 
{  
printf("%d+%d=%d",a,b,a+b); 
}else if(c == 2){
printf("%d-%d=%d",a,b,a-b); 
}else if(c == 3){
printf("%d*%d=%d",a,b,a*b); 
}else if(c ==4){
printf("%d/%d=%d",a,b,a/b); 
}else{  
printf("오류"); 
}
}  
